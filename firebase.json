{
  "hosting": [
    {
      "target": "angularHostApp",
      "public": "/angular-host-app/dist/angular-host-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "angularRemoteApp",
      "public": "/angular-remote-app/dist/angular-remote-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "reactHostApp",
      "public": "/react-host-app/build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "reactRemoteApp",
      "public": "/react-remote-app/build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "vueHostApp",
      "public": "/vue-host-app/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
